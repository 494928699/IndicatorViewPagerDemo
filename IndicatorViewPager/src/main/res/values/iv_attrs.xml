<?xml version="1.0" encoding="utf-8"?>
<resources>

  <declare-styleable name="indicator_viewpager">
    <attr name="iv_fillColor"
        format="color"/>
    <attr name="iv_pageColor"
        format="color"/>
    <attr name="iv_strokeColor"
        format="color"/>
    <attr name="iv_radius"
        format="dimension"/>
    <attr name="iv_strokeWidth"
        format="dimension"/>
    <attr name="iv_pointMargin"
        format="dimension"/>
    <attr name="iv_paddingBottom"
        format="dimension"/>

    <attr name="iv_gravity">
      <enum name="left"
          value="0"/>
      <enum name="center"
          value="1"/>
      <enum name="right"
          value="2"/>
    </attr>

    <attr name="iv_paddingSide"
        format="dimension"/>

    <attr name="iv_mainLayoutId"
        format="reference"/>
  </declare-styleable>


</resources>
